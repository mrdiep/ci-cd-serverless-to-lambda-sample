{
    "compilerOptions": {
      "lib": ["es2020"],
      "removeComments": true,
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "sourceMap": true,
      "target": "es2020",
      "outDir": ".build",
      "allowSyntheticDefaultImports": true,
      "allowJs": false,
      "baseUrl": "./src",
      "esModuleInterop": true,
      "noImplicitAny": true,
      "preserveConstEnums": true,
      "experimentalDecorators": true
      //"strictNullChecks": true
    },
    "include": ["./**/*.ts"],
    "exclude": [
      "node_modules/**/*",
      ".serverless/**/*",
      ".webpack/**/*",
      ".vscode/**/*"
    ]
  }
  